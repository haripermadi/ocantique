<%include ../partials/header%>

<div class="container">
    <% if (product === null){%>
        <center>
            <span>no item yet</span>
        </center>
        <%}else{%>
    <h3>MY CART</h3>
    <table class="table">
            <thead>
                <th>Item</th>
                <th>Quantity</th>
                <th>price</th>
                <th>Total</th>
            </thead>
            <tbody>
                <%product.Products.forEach(data=>{%>
                <tr>
                    <td><%=data.name%></td>
                    <td><%=data.Order_Product.quantity%></td>
                    <td><%=data.price%></td>
                    <td><%=data.price * data.Order_Product.quantity%></td>
                </tr>           
                <%})%>
                <tr>
                    <td></td>
                    <td></td>
                    <td>Total Payment</td>
                    <td><b><%=payment%></b></td>
                </tr>  
                <tr>
                    <td><a href="/"><button class="btn btn-success">Continue Shopping</button></a></td>
                    <td></td>
                    <td></td>
                    <td>
                        <form action="/users/checkout" method="POST">
                            <input type="hidden" name="amount" value="<%=payment%>">
                            <button class="btn btn-primary">Proceed to checkout</button>
                        </form>
                    </td>
                </tr> 
            </tbody>
    </table>
    <%}%>
</div>
